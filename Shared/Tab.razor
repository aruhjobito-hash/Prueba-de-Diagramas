@typeparam TItem

<div class="tabs">
    <ul class="nav nav-tabs">
        @foreach (var tab in Tabs)
        {
            <li class="nav-item">
                <a class="nav-link @(tab == ActiveTab ? "active" : "")" @onclick="() => ActivateTab(tab)">
                    @tab.Title
                </a>
            </li>
        }
    </ul>
    <div class="tab-content">
        @if (ActiveTab != null)
        {
            @ActiveTab.ChildContent
        }
    </div>
</div>

@code {
    private List<TabItem<TItem>> Tabs { get; set; } = new List<TabItem<TItem>>();
    private TabItem<TItem> ActiveTab { get; set; }

    public void AddTab(TabItem<TItem> tab)
    {
        Tabs.Add(tab);
        if (Tabs.Count == 1)
        {
            ActiveTab = tab;
        }
        StateHasChanged();
    }

    private void ActivateTab(TabItem<TItem> tab)
    {
        ActiveTab = tab;
    }
}
